{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 600,
    "title": "Cities population in 2021",
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "selected_year",
        "value": 2021,
        "bind": {
          "input": "range",
          "min": 1979,
          "max": 2021,
          "step": 1,
          "name": "Year"
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/KingCodesHere/FIT3179Assignment2/main/js/ne_110m_wgs84_bounding_box.json",
          "format": {"type": "topojson", "feature": "ne_110m_wgs84_bounding_box"}
        },
        "mark": {
          "type": "geoshape",
          "fill": "null",
          "stroke": "lightgray"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/KingCodesHere/FIT3179Assignment2/main/js/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/KingCodesHere/FIT3179Assignment2/main/Data/co2_annmean_gl.csv"
        },
         "transform": [
          {
            "lookup": "mean",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/KingCodesHere/FIT3179Assignment2/main/js/ne_110m_wgs84_bounding_box.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_wgs84_bounding_box"
                }
              },
               "key": "objects"
              },
            "as": "geo"
          },
          {"filter": "datum.year == selected_year"}
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
           "color": {
            "field": "mean",
            "type": "nominal",
            "title": ["co2"]
          }
        }
      },
      
        {
        "data":{
          "url":"https://raw.githubusercontent.com/KingCodesHere/FIT3179Assignment2/main/js/ne_110m_graticules_30.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        }, 
        "mark": {"type": "geoshape", "fill": null,"stroke":"grey"}
      }
    ]
  }